@model eShopSolution.ViewModels.Sales.OrderInforVm

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

<div style="padding: 20px 0 0 20px">
    <h3>Thông tin đơn hàng</h3>
    @{
        var status = "";
        var statusEnum = (int)Model.Status;
        switch (statusEnum)
        {
            case 0:
                status = "Đang chờ duyệt";
                break;
            case 1:
                status = "Đã duyệt";
                break;
            case 2:
                status = "Đang giao";
                break;
            case 3:
                status = "Đã giao";
                break;
            case 4:
                status = "Đã huỷ";
                break;
            default:
                status = "...";
                break;
        }
    }
    <h5 style="color: orangered;">Trạng thái đơn hàng : @status</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Tên người đặt : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Thời gian đặt :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ nhận hàng : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Email : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Số điện thoại : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>        
    </dl>
    <h6 style="margin-top: 20px;">Danh sách sản phẩm đã đặt</h6>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Hình ảnh
                    </th>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Đơn giá
                    </th>
                    <th>
                        Số lượng mua
                    </th>
                    <th>
                        Thành tiền
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>
                        <img style="width: 50px; height: 50px; object-fit: cover;" src="@(Configuration["BaseAddress"] + item.PathImg)" alt="" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @{decimal totalAmount = 0;
            foreach (var orderDetail in Model.OrderDetails)
            {
                totalAmount += orderDetail.Price * orderDetail.Quantity;
            }
        }
        <h6>Tổng tiền : @totalAmount</h6>
</div>
<div>
    <a asp-action="Index">Trở về danh sách đơn hàng</a>
</div>
